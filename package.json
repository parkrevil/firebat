{
  "name": "firebat",
  "bin": {
    "firebat": "./dist/firebat.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/firebat.js"
    },
    "./oxlint-plugin": {
      "import": "./dist/oxlint-plugin.js"
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "db:generate": "bunx -y drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "bunx -y drizzle-kit migrate --config ./drizzle.config.ts",
    "lint": "bun run build && oxlint --config ../../.oxlintrc.jsonc --type-aware --fix .",
    "test": "bun test"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.38.4",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "drizzle-orm": "^0.45.1",
    "fastbitset": "^0.4.1",
    "oxc-parser": "^0.110.0",
    "zod": "^3.25.76",
    "xxhash-wasm": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fastbitset": "^0.2.2",
    "@typescript/native-preview": "^7.0.0-dev.20260202.1",
    "drizzle-kit": "^0.31.8"
  },
  "module": "index.ts",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
