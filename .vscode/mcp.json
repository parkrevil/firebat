{
  "servers": {
    "sequential-thinking": {
      "command": "bunx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "bunx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${env:CONTEXT7_API_KEY}"]
    },
    "firebat": {
      "type": "stdio",
      "command": "bun",
      "args": ["firebat.js", "mcp"],
      "cwd": "${workspaceFolder}/dist"
    }
  }
}
